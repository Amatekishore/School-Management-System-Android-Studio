<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images_9"
    tools:context=".Splash">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lin_lay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#40ffffff"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splash"
            android:layout_width="165dp"
            android:layout_height="166dp"
            android:background="@drawable/logo_new"
            android:contentDescription="logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="serif-monospace"
            android:shadowColor="@color/colorPrimary"
            android:text="@string/welcome"
            android:textColor="#9c2c13"
            android:textSize="40sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:textColor="#421579"
            android:textSize="20sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School Information Management System"
            android:textColor="#9c2e13"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="120dp"
            android:background="#701212">

        </View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Designed and Developed By"
                android:textColor="#722de1" />

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Db Scholars"
                android:textColor="#660606" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
